{
  "collections": [
    {
      "id": "users",
      "name": "users",
      "type": "auth",
      "system": false,
      "schema": [
        {
          "name": "email",
          "type": "email",
          "required": true,
          "presentable": false,
          "unique": true,
          "options": {
            "exceptDomains": null,
            "onlyDomains": null
          }
        },
        {
          "name": "password",
          "type": "password",
          "required": true,
          "presentable": false,
          "options": {
            "minLength": 6
          }
        },
        {
          "name": "role",
          "type": "select",
          "required": true,
          "presentable": false,
          "options": {
            "maxSelect": 1,
            "values": ["admin", "manager", "accountant", "worker"],
            "displayFields": null
          }
        },
        {
          "name": "firstName",
          "type": "text",
          "required": false,
          "presentable": false,
          "options": {
            "min": null,
            "max": null,
            "pattern": ""
          }
        },
        {
          "name": "lastName",
          "type": "text",
          "required": false,
          "presentable": false,
          "options": {
            "min": null,
            "max": null,
            "pattern": ""
          }
        },
        {
          "name": "isActive",
          "type": "bool",
          "required": true,
          "presentable": false,
          "options": {}
        }
      ],
      "indexes": [],
      "listRule": "@request.auth.id != \"\"",
      "viewRule": "@request.auth.id != \"\"",
      "createRule": "@request.auth.id != \"\"",
      "updateRule": "@request.auth.id != \"\"",
      "deleteRule": "@request.auth.id != \"\"",
      "options": {
        "allowEmailAuth": true,
        "allowOAuth2Auth": false,
        "allowUsernameAuth": false,
        "exceptEmailDomains": null,
        "manageRule": null,
        "minPasswordLength": 6,
        "onlyEmailDomains": null,
        "onlyVerified": false,
        "requireEmail": true
      }
    }
  ]
}
