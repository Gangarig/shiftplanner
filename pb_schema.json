{
  "users": {
    "id": "users",
    "name": "users",
    "type": "auth",
    "schema": [
      {
        "name": "email",
        "type": "email",
        "required": true
      },
      {
        "name": "password",
        "type": "password",
        "required": true
      },
      {
        "name": "role",
        "type": "select",
        "required": true,
        "options": {
          "values": ["admin", "manager", "accountant", "worker"]
        }
      },
      {
        "name": "firstName",
        "type": "text",
        "required": false
      },
      {
        "name": "lastName",
        "type": "text",
        "required": false
      },
      {
        "name": "isActive",
        "type": "bool",
        "required": true
      }
    ]
  },
  "shifts": {
    "id": "shifts",
    "name": "shifts",
    "type": "base",
    "schema": [
      {
        "name": "station",
        "type": "text",
        "required": true
      },
      {
        "name": "day",
        "type": "date",
        "required": true
      },
      {
        "name": "worker",
        "type": "relation",
        "options": {
          "collectionId": "users"
        }
      }
    ]
  }
}